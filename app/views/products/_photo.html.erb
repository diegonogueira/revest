<tr>
	<td class="alinCentro"><%= f.text_field :title, :size => 20 %></td>
	<td class="alinCentro">
		<% if f.object.new_record? %>
			<%= f.file_field :image %>
		<% else %>			
			<%= image_tag f.object.image.url(:thumb) %>
		<% end %>
	</td>	
	<td class="alinCentro"><%= f.text_area :description, :cols => 40, :rows=>5 %></td>
	<td class="alinCentro">
    <%= remove_link_unless_new_record(f) %>
	</td>
</tr>
